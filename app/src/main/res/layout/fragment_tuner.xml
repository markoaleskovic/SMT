<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tunerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_900"
    tools:context="com.malesko.smt.ui.tuner.TunerFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTuning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_tuning"
        app:layout_constraintBottom_toTopOf="@id/tvNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.45"
        android:layout_marginBottom="10dp"/>


    <!-- Note -->
    <TextView
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textColor="@color/text_soft"
        android:textSize="72sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTuning"
        app:layout_constraintBottom_toTopOf="@id/tvFreq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="HardcodedText" />

    <!-- Frequency -->
    <TextView
        android:id="@+id/tvFreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0 Hz"
        android:textColor="@color/text_soft"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvNote"
        app:layout_constraintBottom_toTopOf="@id/centBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cents visualization (9 ticks) -->
    <LinearLayout
        android:id="@+id/centBar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvFreq"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/tickL4"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/tick_inactive" />

        <View
            android:id="@+id/tickL3"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/tick_inactive" />

        <View
            android:id="@+id/tickL2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/tick_inactive" />

        <View
            android:id="@+id/tickL1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/tick_inactive" />

        <View
            android:id="@+id/tickC"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/tick_inactive" />

        <View
            android:id="@+id/tickR1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/tick_inactive" />

        <View
            android:id="@+id/tickR2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/tick_inactive" />

        <View
            android:id="@+id/tickR3"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/tick_inactive" />

        <View
            android:id="@+id/tickR4"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/tick_inactive" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
